<header class="logo">
    {{#if @blog.logo}}
    	<a class="logo__image" href="{{@blog.url}}">
    		<img src="{{@blog.logo}}" alt="{{@blog.title}} - {{@blog.description}}" />
    	</a>
    {{else}}
	    <h1 class="logo__title">
	    	<a href="{{@blog.url}}" class="logo__link">{{@blog.title}}</a>
	    	<!-- <img src='./img/daramu-01.png' height='100'/> -->
	    </h1>
	    {{#if @blog.description}}
	    <!-- <h2 class="logo__desc">{{@blog.description}}</h2> -->
	    <h2 class="logo__desc">Loffo - 才藝家專屬的募資平台</h2>
	    {{/if}}
    {{/if}}
</header>