header.logo
  h1.logo__title
    //- a(href='/', class='logo__link') LOFFO
    img#logoPic(src='./img/daramu-01.png')
  h2.logo__desc Loffo - 才藝家專屬的募資平台
  ul.logo__user.navbar-nav.navbar-right
    if !user
      li(class=title=='Login'?'active':undefined)
        a(href='/login') 登入
    else
      li.dropdown(class=title=='Account Management'?'active':undefined)
        a.dropdown-toggle(href='#')
          if user.profile.picture
            //- .headerProfileGrid(style='background: url(\'#{user.profile.picture}\') no-repeat;background-size: auto 100%; background-position: 50% 0; ')
            img(src='#{user.profile.picture}')
          else
            img(src='#{user.gravatar(60)}')
          | #{user.profile.name || user.email || user.id}&nbsp;
          i.caret
        ul.dropdown-menu
          li
            a(href='/account') 我的帳號
          li.divider
          li
            a(href='/record') 我的贊助
          li.divider
          if user.profile.status=='admin'
            li
              a(href='/postProj') 發案管理
            li.divider
          li
            a(href='/logout') 登出