.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        //- img(src='/svg/ntu_live_logo.svg', height='30px')
        //- i.fa.fa-cube
        | NTU LIVE
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left
        li(class=title=='Home'?'active':undefined)
          a(href='/') Home
        //- li(class=title=='API Examples'?'active':undefined)
        //-   a(href='/api') API
        li.dropdown(class=title=='People'?'active':undefined)
          a.dropdown-toggle(href='/people/fellow') People
          ul.dropdown-menu
            li
              a(href='/people/fellow') Fellow
            li.divider
            li
              a(href='/people/ta') Staff
            li.divider
            li
              a(href='/people/mentor') Mentor
            li.divider
            li
              a(href='/people/advisor') Advisor        
            li.divider
            li
              a(href='/people/founder') Founder
        li(class=title=='Idea'?'active':undefined)
          a(href='/idea') Ideas
        li.dropdown(class=title=='Sharing'?'active':undefined)
          a.dropdown-toggle(href='/sharing/photo') Sharing
          ul.dropdown-menu
            li
              a(href='/sharing/photo') Photo
            li.divider
            li
              a(href='/sharing/video') Video
            li.divider
            li
              a(href='/sharing/document') Document
        li(class=title=='Announcements'?'active':undefined)
          a(href='/announcements') Announcements
        //- li(class=title=='Contact'?'active':undefined)
        //-   a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                //- .headerProfileGrid(style='background: url(\'#{user.profile.picture}\') no-repeat;background-size: auto 100%; background-position: 50% 0; ')
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              if user.profile.status != "fellow" && user.profile.status != "guest"
                li 
                  a(href='/article') Edit Articles
                li.divider
              li
                a(href='/logout') Logout