extends layoutGray

block content
		.row.jumbotron.jumbotronIdea
			.container
				h2 Ideas
				p 
				p 
				p 
		.row
			.postIdeaForm
				.container
					.col-sm-10
						.col-sm-offset-3.col-sm-8
							h2 Write Down Your Idea
						form.form-horizontal(action='idea/new/'+user.id, method='POST')
							input(type='hidden', name='_csrf', value=_csrf)
							.form-group
								label.col-sm-3.control-label(for='title') Idea
								.col-sm-8
									input.form-control(type='text', name='title', id='title')
							.form-group
								label.col-sm-3.control-label(for='description') Description
								.col-sm-8
									textarea.form-control(type='description', name='description', id='description', rows='5')
							.form-group
								.col-sm-offset-3.col-sm-9
									button.btn.btn.btn-primary(type='submit')
										i.fa.fa-pencil
										|  Post 
			.postIdeaBtn
				p Post Your Idea
		.container
			.row
				.postIdeaList
					.col-sm-10
						each val in ideaList
							.post.post-quote(id='#{val.timestamp}')
								.post-head
									h3 #{val.title}
									.post-meta
										div
											i.fa.fa-user  BY:
											a(href='../intro/#{val.authorId}') #{val.author}
										div
											i.fa.fa-clock-o	#{val.timestamp}
									.clearfix
								.post-wrap
									.post-inner
										p !{val.description}
										
										.clearfix
